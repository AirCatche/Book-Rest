<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="30dp" />
            <solid android:color="?attr/colorSecondaryVariant"/>
        </shape>
    </item>
    <item android:right="4dp" android:bottom="4dp">
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <gradient
                android:angle="135"
                android:endColor="?attr/colorSecondary"
                android:centerColor="?attr/colorSecondary"
                android:startColor="?attr/background"
                android:type="linear" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>



