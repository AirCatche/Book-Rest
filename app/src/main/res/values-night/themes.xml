<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookRest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_300</item>
        <item name="colorPrimaryVariant">@color/brown_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_300</item>
        <item name="colorSecondaryVariant">@color/lime_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Theme customization -->
        <item name="colorError">?attr/colorSecondaryVariant</item>
        <item name="android:colorBackground">@color/brown_100</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="navigationIconTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Theme.BookRestSophisticated" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige</item>
        <item name="colorPrimaryVariant">@color/dark_beige</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/dark_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Theme customization -->
        <item name="colorError">?attr/colorSecondaryVariant</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:colorBackground">@color/light_beige</item>
        <item name="colorSurface">@color/lighter_beige</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="navigationIconTint">?attr/colorSecondaryVariant</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/regular_unica_one</item>

    </style>

    <style name="DialogSliding">
        <item name="android:windowEnterAnimation">@anim/anim_slide_down</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_up</item>
    </style>

</resources>
