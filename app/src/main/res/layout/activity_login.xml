<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.slobodyanyuk_mykhailo99.bookrest.ui.auth.login.LoginViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.LoadingActivity">

        <ImageView
            android:id="@+id/iv_load_pic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/logo"
            android:src="@drawable/ic_logo2"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_load_pic">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_username"
                android:textColorHint="@color/primary"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorText="@{viewmodel.usernameErrorMessage}"
                app:helperText="*">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:autofillHints="username"
                    android:background="@drawable/login_et_input"
                    android:drawableStart="@drawable/ic_person_custom"
                    android:drawablePadding="12dp"
                    android:inputType="textNoSuggestions"
                    android:text="@={viewmodel.username}"
                    android:textColor="@color/primary_dark"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:textColorHint="@color/primary"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorText="@{viewmodel.passwordErrorMessage}"
                app:helperText="*"
                app:passwordToggleEnabled="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:autofillHints="password"
                    android:background="@drawable/login_et_input"
                    android:drawableStart="@drawable/ic_lock_custom"
                    android:drawablePadding="12dp"
                    android:inputType="textPassword"
                    android:text="@={viewmodel.password}"
                    android:textColor="@color/primary_dark"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="192dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/login_submit_button"
                android:enabled="@{viewmodel.isValid()}"
                android:text="@string/login"
                android:textColor="@color/on_accent"
                android:textSize="14sp"
                android:onClick="@{viewmodel::onLoginButton}" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/tv_login_no_profile_message"
                android:textColor="@color/on_primary"
                android:textSize="18sp"
                android:onClick="@{viewmodel::onSignUpText}"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>